---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      :root {
        --line-height: 1.2rem;
        --border-thickness: 2px;
        --text-color: #000;
        --background-color: #fff;
      }

      /* Reset and base styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        position: relative;
        font-family: monospace;
        background: var(--background-color);
        color: var(--text-color);
        line-height: var(--line-height);
        padding: 2rem;
        overflow-x: hidden;
      }

      /* ASCII Header Styles */
      .ascii-header {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 2rem 0;
      }

      .ascii-art {
        font-size: 16px;
        line-height: var(--line-height);
        color: var(--text-color);
        background: transparent; 
        white-space: pre;
        letter-spacing: 0;
        font-weight: normal;
        text-align: center;
        margin: 0;
        font-variant-ligatures: none;
        font-feature-settings: "liga" 0;
        text-rendering: optimizeSpeed;
      }

      /* Debug Toggle - removed, now using hardcoded boolean */

      /* Debug Grid */
      .debug-grid {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 1;
        pointer-events: none;
        opacity: 0;
        transition: opacity 0.3s ease;
        background-image:
          repeating-linear-gradient(
            transparent 0, 
            rgba(0,0,0,.12) 1px,
            transparent 1px, 
            transparent var(--line-height)
          ),
          repeating-linear-gradient(
            90deg,
            transparent 0, 
            rgba(0,0,0,.12) 1px,
            transparent 1px, 
            transparent 1ch
          );
        background-size: 1ch var(--line-height);
      }

      /* Show debug grid when debug class is on body */
      body.debug .debug-grid {
        opacity: 1;
      }

      /* Highlight off-grid elements */
      .debug .off-grid { 
        background: rgba(255,0,0,.15); 
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        .ascii-art {
          font-size: 12px;
        }
        
        .ascii-header {
          padding: 1rem;
        }
        
        .debug-toggle-label {
          font-size: 12px;
          padding: 0.25rem;
        }
      }

      @media (max-width: 480px) {
        .ascii-art {
          font-size: 8px;
        }
        
        body {
          padding: 1rem;
        }
      }
    </style>
  </head>
  <body class="debug">
    <slot />

    <!-- grid overlay -->
    <div class="debug-grid"></div>

    <!-- run the helper globally -->
    <script type="module" is:inline>
      import { initMonospaceGrid } from '/src/utils/monospaceGrid.js';
      // only turn it on in dev builds ───────────────────────────────┐
      initMonospaceGrid(import.meta.env.DEV);                        // │
    </script>                                                        // │
  </body>
</html>